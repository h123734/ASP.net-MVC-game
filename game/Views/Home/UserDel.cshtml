@model IEnumerable<game.Models.tMember>

@{
    ViewBag.Title = "會員列表";
}
<h1 class="pt-md-5 ">
<h2 class="ml-5 pt-md-5 mt-md-5">會員列表</h2>


<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-10 col-offset-2">
                <table class="table  rwd-table">
                    <tr class="size">
                        <th>
                            @Html.DisplayNameFor(model => model.fUserId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fPwd)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fEmail)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr class="size">
                            <td  data-th="@Html.DisplayNameFor(model => model.fUserId)">
                                @Html.DisplayFor(modelItem => item.fUserId)
                            </td>
                            <td data-th="@Html.DisplayNameFor(model => model.fPwd)">
                                @Html.DisplayFor(modelItem => item.fPwd)
                            </td>
                            <td data-th="@Html.DisplayNameFor(model => model.fName)">
                                @Html.DisplayFor(modelItem => item.fName)
                            </td>
                            <td data-th="@Html.DisplayNameFor(model => model.fEmail)" class="text-warning bg-success">
                                @Html.DisplayFor(modelItem => item.fEmail)
                            </td>
                            <td>                               
                                @Html.ActionLink("會員刪除", "UserDelete", new { id = item.fId },new {@class="text-dark"})
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</body>
