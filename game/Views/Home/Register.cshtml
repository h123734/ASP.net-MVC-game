<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

@model game.Models.tMember

@{
    ViewBag.Title = "註冊";
}

<h2 class="ml-5 text-danger mt-md-3 mt-md-2">註冊</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="ml-4 pl-1">建立新帳戶</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group ml-3">
            @Html.LabelFor(model => model.fUserId, htmlAttributes: new { @class = "control-label col-md-2 h2 mt-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fUserId, new { htmlAttributes = new { @class = "form-control mt-4" } })
                @Html.ValidationMessageFor(model => model.fUserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ml-3">
            @Html.LabelFor(model => model.fPwd, htmlAttributes: new { @class = "control-label col-md-2 h2 mt-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fPwd, new { htmlAttributes = new { @class = "form-control mt-4", @type = "password" } })
                @Html.ValidationMessageFor(model => model.fPwd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ml-3">
            @Html.LabelFor(model => model.fName, htmlAttributes: new { @class = "control-label col-md-2 h2 mt-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fName, new { htmlAttributes = new { @class = "form-control mt-4" } })
                @Html.ValidationMessageFor(model => model.fName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ml-3">
            @Html.LabelFor(model => model.fEmail, htmlAttributes: new { @class = "control-label col-md-2 h2 mt-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fEmail, new { htmlAttributes = new { @class = "form-control mt-4" } })
                @Html.ValidationMessageFor(model => model.fEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ml-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn  bg-info btnsize" value="註冊" />
                @ViewBag.Message
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "h2" })
</div>
