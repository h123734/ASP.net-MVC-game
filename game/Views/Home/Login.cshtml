<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

@{
    ViewBag.Title = "會員登入";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="ml-5 text-danger pt-md-3">會員登入</h2>

<form action="@Url.Action("Login")" method="post">
    <div class="form-horizontal ml-3 ml-sm-2">
        <hr />
        <div class="form-group">
            <span class="control-label col-md-2  h2 mt-1">帳號</span>
            <div class="col-md-10">
                <input type="text" id="fUserId" name="fUserId" required="required" class="form-control mt-4" style="font-size:18px">
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 h2 mt-1">密碼</span>
            <div class="col-md-10">
                <input type="password" id="fPwd" name="fPwd" required="required" class="form-control mt-4" style="font-size:18px">
            </div>
        </div>



        <div class="form-group divbtn">
            <div class="col-md-offset-2 col-md-10  mt-1">
                <input type="submit" value="登入" class="btn bg-info btn-default btnsize" style="font-size:18px">
                @ViewBag.Message
            </div>
        </div>
    </div>
</form>
