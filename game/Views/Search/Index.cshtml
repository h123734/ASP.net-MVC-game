@model IPagedList<game.Models.pPrice>
@using PagedList.Mvc
@using PagedList
@{
    Layout = "~/Views/Shared/_Layout_user.cshtml";
}


<h2 class="text-center searchtitle">搜尋列表</h2>

@using (Html.BeginForm("SearchByTitle", "Search", FormMethod.Post, new { @class = "text-center subscribe_form", placeholder = "搜尋" }))
{
    @Html.TextBox("gtitle", ViewBag.gtitle as string)
    <i class="fas fa-search"></i>
    <br>
    <input class="subscribe" name="" value="Search!" type="submit">
}
<hr>

<body>
    <div class="container-fluid mb-5">
        <div class="row mb-5">
            <div class="col-12 mb-5" style="font-size:5vh">
                @foreach (var item in Model)
                {
                    <div class="col-12 text-center mt-5">

                        <img src="@item.Picture" class="tdimg" /> <br>
                        @Html.DisplayFor(model => item.gTitle, new { @style = "color:red" })
                        @Html.ActionLink("遊戲明細", "Detail", new { id = item.gId }, new { @class = "btn btn-info text-white", @style = "font-size:15px" })
                        <hr class="bg-white">
                    </div>}
                @Html.PagedListPager(Model, x => Url.Action("SearchByTitle", "Search", new { page = x, gtitle = ViewBag.gtitle }))
            </div>
        </div>
    </div>
</body>



